<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/tokenRowFirst"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/token_row_margin"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/second_row"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintVertical_chainStyle="packed">

    <com.cerebus.tokens.presentation.tokens_screen.TokenView
        android:id="@+id/tokenButton1"
        android:layout_width="@dimen/token_width"
        android:layout_height="@dimen/token_height"
        android:layout_marginHorizontal="@dimen/token_margin"
        app:tokenHeight="@dimen/token_height"
        app:tokenWidth="@dimen/token_width"
        android:contentDescription="token1"
        tools:visibility="visible"/>

    <com.cerebus.tokens.presentation.tokens_screen.TokenView
        android:id="@+id/tokenButton2"
        android:layout_width="@dimen/token_width"
        android:layout_height="@dimen/token_height"
        android:layout_marginHorizontal="@dimen/token_margin"
        app:tokenHeight="@dimen/token_height"
        app:tokenWidth="@dimen/token_width"
        android:visibility="gone"
        android:contentDescription="token2"
        tools:visibility="visible"/>

    <com.cerebus.tokens.presentation.tokens_screen.TokenView
        android:id="@+id/tokenButton3"
        android:layout_width="@dimen/token_width"
        android:layout_height="@dimen/token_height"
        android:layout_marginHorizontal="@dimen/token_margin"
        app:tokenHeight="@dimen/token_height"
        app:tokenWidth="@dimen/token_width"
        android:visibility="gone"
        android:contentDescription="token3"
        tools:visibility="visible"/>

    <com.cerebus.tokens.presentation.tokens_screen.TokenView
        android:id="@+id/tokenButton4"
        android:layout_width="@dimen/token_width"
        android:layout_height="@dimen/token_height"
        android:layout_marginHorizontal="@dimen/token_margin"
        app:tokenHeight="@dimen/token_height"
        app:tokenWidth="@dimen/token_width"
        android:visibility="gone"
        android:contentDescription="token4"
        tools:visibility="visible"/>

    <com.cerebus.tokens.presentation.tokens_screen.TokenView
        android:id="@+id/tokenButton5"
        android:layout_width="@dimen/token_width"
        android:layout_height="@dimen/token_height"
        android:layout_marginHorizontal="@dimen/token_margin"
        app:tokenHeight="@dimen/token_height"
        app:tokenWidth="@dimen/token_width"
        android:visibility="gone"
        android:contentDescription="token5"
        tools:visibility="visible"/>

</androidx.appcompat.widget.LinearLayoutCompat>